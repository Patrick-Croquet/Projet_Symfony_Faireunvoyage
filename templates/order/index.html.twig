{% extends 'base.html.twig' %}

{% block title 'Valider ma commande | ' ~ parent() %}

{% block carousel %}<header></header>{% endblock %}

{% block body %}



<h1>{{ title }}</h1>

<section>
    <p class="espace"></p>
</section>

<div class="text-center">
    <b>RÃ©capitulatif de ma commande</b>
</div>
<section>
    <p class="espace1"></p>
</section>



<div class="row">
    <div class="col-12 col-xl-6">

        <div class="order-summary">
            {% for key,product in cart %}

            <div class="row justify-content-center {% if key > 0 %}mt-2{% endif %}">

                <div class="col-2 mr-5">
                    <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}"
                        height="90px" id="illustration">
                </div>

                <div class="col-6 my-auto">
                    {{ product.product.name}}</br>
                    <small>{{ product.product.subtitle }}</small>
                </div>

                <div class="col-2 my-auto">
                    x {{ product.quantity }}
                </div>

            </div>
            {% endfor %}
        </div>

    </div>



    <div class="col-12 col-xl-6">

        <div class="row justify-content-center" id="livraison">

            <div class="col-sm-8 col-md-6 col-lg-6 my-auto">

                <hr id="hr1">
                <div class="ajout-add">
                    <a href="{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
                </div>
                <hr id="hr2">

                {% set formHtml %}
                {{ form_start(form, {action:path('order_recapitulatif')}) }}
                {{ form_end(form) }}
                {% endset %}
                {{ formHtml|replace({'[br]' : '<br/>'})|raw }}

            </div>
        </div>
    </div>
</div>




