{% extends 'base.html.twig' %}

{% block title 'Accueil | ' ~ parent() %}

{% block carousel %}<header></header>{% endblock %}

{% block body %}


<div class="example-wrapper">

    <h1 class="titre">{{title}}<br /><small id="titretraduction">{{titletraduction}}</small></h1>

    <section>
        <p class="espace"></p>
    </section>

    <article id="video">
        <iframe class="rounded" src="{{video}}" frameborder="0"
            allow="accelerometer; autoplay; loop; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
    </article>

    <section>
        <p class="espace1"></p>
    </section>

    <h5>{{intro1}}<span id="span1">DODO LE GUIDE</span>{{intro2}}</h5>

    <div class="d-flex justify-content-center faa-pulse animated faa-slow">
        <img src="{{icones}}" id="vanille" />
    </div>

    <section>
        <p class="espace2"></p>
    </section>

    <h5>{{intro3}}<span id="span2">{{intro4}}</span>{{intro5}}<span id="span3">{{intro6}}</span>{{intro7}}</h5>
</div>



<container class="example-wrapper">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
            <a href="{{ path('app_randonnée') }}">
                <img src="{{featurette1}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2rando">Randonnées</h2>
            <small class="para">
                De nombreuses Randonnées pour tous les niveaux.
            </small>
        </div>

        <div class="col-12 col-md-6 col-lg-4" id="activitésport">
            <a href="{{ path('app_activitésportive') }}">
                <img src="{{featurette2}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2activité">Activités Sportives</h2>
            <small class="para">
                Profitez de toutes les activités sportives disponibles sur l'île.
            </small>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="{{ path('app_plage') }}">
                <img src="{{featurette3}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2visite">Plages</h2>
            <small class="para">
                Des plages magnifique pour pratiquer le farniente...
            </small>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="{{ path('app_visite') }}">
                <img src="{{featurette4}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2rando">Visites</h2>
            <small class="para">
                Visitez certains lieux historiques de l'île, les marchés, les rhumeries...
            </small>
        </div>

        <div class="col-12 col-md-6 col-lg-4" id="plats">
            <a href="{{ path('app_plats') }}">
                <img src="{{featurette5}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2activité">Plats</h2>
            <small class="para">
                Sur l'île on retrouve une multitude de plats les carry, rougails, sauté...
            </small>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="{{ path('app_biodiversité') }}">
                <img src="{{featurette6}}" class="img-thumbnail shadow" style="height: 250px; width: 250px">
            </a>
            <section>
                <p class="espace3"></p>
            </section>
            <h2 id="h2visite">Biodiversité</h2>
            <small class="para">
                L'île regorge de nombreuses variétés et d'espèces de faune et de flore...
            </small>
        </div>

    </div>
</container>

<section>
    <p class="espace4"></p>
</section>

<div class="d-flex justify-content-center">
    <img src="{{icones1}}" id="panneau" class="faa-spin animated-hover faa-slow" />
