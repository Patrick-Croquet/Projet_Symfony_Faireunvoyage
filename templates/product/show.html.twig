{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} | DoDo Le Guide{% endblock %}

{% block carousel %}<header></header>{% endblock %}

{% block body %}

<div class="col-md-12 text-center">

    <div class="row">
        <div class="col-md-12" id="haut">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid" id="imgname">
        </div>
        <div class="col-md-12 my-auto">
            <h3 id="titrehaut">{{ product.name }}</h3>
            <small>{{ product.subtitle }}</small>
            <br />
            <section>
                <p class="espace"></p>
            </section>
            <hr id="hr1">
            <p>{{ product.description }}</p>
            <hr id="hr1">
            <span class="product-page-price">{{ (product.price / 100 )|number_format(2, ',', '.') }} â‚¬</span><br />

            <a href="{{ path('add_to_cart', { id : product.id } ) }}" class="btn btn-outline-success mt-3">Ajouter au
                panier</a>
        </div>
    </div>

    <section>
        <p class="espace"></p>
    </section>

    <div class="articles my-auto">
        <hr id="hr2">
        <h3 class="mt-3 mb-3">Les articles les plus vendus</h3>
        <hr id="hr3">
        <div class="row">
            {% for product in products %}
            <div class="col-3 col-sm-3">
                {% include 'product/single_product.html.twig' %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>

