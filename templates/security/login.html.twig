{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block carousel %}<header></header>{% endblock %}

{% block body %}

<h1 class="mb-5 text-center">{{title}}</h1>

<form method="post">

    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>

    {% endif %}
    <label for="inputEmail">Adresse email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword" class="mt-4">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="text-center">
        <button class="btn btn-outline-success" type="submit">
            Se connecter
        </button>
    </div>
    <div class="text-center mt-2">ou</div>
    <p class="text-center"><a href="{{ path('security_registration') }}">Cr√©er un compte</a></p>
</form>

